/* components/coupon/coupon.wxss */
.coupon-component {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.coupon-component image {
  position: absolute;
  left: 50%;
  top: 10rpx;
  height: 280rpx;
  transform: translateX(-50%);
}

.coupon-component .title {
  position: absolute;
  left: 48%;
  top: 60rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #ffffff;
}

.coupon-component .quota {
  position: absolute;
  left: 48%;
  top: 60rpx;
  margin: 30rpx 0 0 50rpx;
  font-size: 90rpx;
  font-weight: bold;
}
.coupon-component .period-of-validity {
  position: absolute;
  left: 48%;
  top: 60rpx;
  margin: 170rpx 0 0 30rpx;
  font-size: 24rpx;
}

.coupon-component.enable .quota {
  color: #AD1F14;
}

.coupon-component.enabled .quota {
  color: #037177;
}

.coupon-component.invalid .quota {
  color: #565656;
}

.coupon-component.enable .period-of-validity {
  color: #AD1F14;
}

.coupon-component.enabled .period-of-validity {
  color: #037177;
}

.coupon-component.invalid .period-of-validity {
  color: #565656;
}