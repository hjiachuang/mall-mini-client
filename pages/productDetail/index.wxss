/* pages/product-detail/product-detail.wxss */

.product-detail {
  padding-bottom: 120rpx;
}

.product-detail-image-swiper {
  height: 750rpx;
}

.product-detail-image-swiper-item {
  text-align: center;
}

.product-detail-image-swiper-item image {
  height: 100%;
}

.product-detail-message {
  padding: 40rpx 20rpx 0;
}

.product-detail-price text{
  display: block;
}

.product-detail-price-discount {
  color: var(--color-7);
}

.product-detail-price-original {
  margin-top: 12rpx;
  color: var(--color-1);
  text-decoration: line-through;
}

.product-detail-name {
  margin-top: 20rpx;
}

.product-detail-other-message {
  height: 72rpx;
  line-height: 72rpx;
  margin-top: 30rpx;
  background-color: var(--color-9);
  color: #ffffff;
  display: flex;
  justify-content: space-between;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.product-detail-other-message text text {
  color: var(--color-4);
}

.product-detail-navbar {
  margin-top: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: var(--color-9);
  background-color: var(--color-13);
  display: flex;
  justify-content: space-around;
  position: relative;
  z-index: 1;
}

.product-detail-navbar.fixedTop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  margin-top: 0;
}

.product-detail-navbar >.active {
  color: var(--color-7);
}

.product-detail-content.fixedTop {
  margin-top: 130rpx;
}

.product-detail-content-details-image image {
  width: 100%;
  height: auto;
}

.product-detail-content-comment {
  min-height: calc(100vh - 80rpx);
}

.comment-item {
  padding: 20rpx 28rpx;
  border-bottom: 1rpx solid #f7f7f7;
}

.comment-item:last-child {
  border-bottom: 1rpx solid transparent;
}

.comment-item-top {
  height: 100rpx;
  line-height: 100rpx !important;
}

.comment-item-top >image {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment-item-username {
  float: left;
  margin-left: 20rpx;
  line-height: 100rpx !important;
}

.comment-item-score {
  float: right;
  height: 100%;
  display: flex;
  align-items: center;
}

.comment-item-score image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 2rpx;
}

.comment-item-bottom {
  margin-top: 20rpx;
}

.comment-item-bottom text:first-child {
  display: inline-block;
}

.comment-item-bottom text:last-child {
  display: inline-block;
  width: 100%;
  text-align: right;
}

.product-detail-control {
  position: fixed;
  z-index: 999;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  border-top: 2rpx solid #e7e7e7;
  background-color: var(--color-13);
}

.product-detail-control-icon {
  float: left;
  margin-left: 20rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.product-detail-control-icon view {
  width: 80rpx;
  text-align: center;
}

.product-detail-control-icon image {
  width: 50rpx;
  height: 50rpx;
}

.product-detail-control-icon text {
  display: block;
}

.product-detail-control-button {
  float: right;
  margin-right: 20rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.product-detail-control-button button {
  float: left;
  width: 210rpx !important;
  height: 70rpx !important;
  line-height: 70rpx;
  padding: 0;
  font-size: 28rpx;
  color: #ffffff;
}

.product-detail-control-button button:first-child {
  border-radius: 35rpx 0 0 35rpx;
  background-color: var(--color-4);
}

.product-detail-control-button button:last-child {
  border-radius: 0 35rpx 35rpx 0;
  background-color: var(--color-5);
}