/* pages/order/order.wxss */
page {
  background-color: var(--color-13);
}

.order-navbar {
  height: 100rpx;
  box-shadow: 0 0 100rpx 1rpx #f5f5f5;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
}

.order-navbar text {
  height: 60rpx;
  border-bottom: 4rpx solid transparent;
  transition: all 0.1s;
}

.order-navbar text.active {
  border-bottom-color: var(--color-4);
}

.order-content {
  height: calc(100vh - 100rpx);
  white-space: nowrap;
}

.order-list {
  display: inline-block;
  width: 750rpx;
  height: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  overflow: auto;
  vertical-align: top;
}

.order-item {
  display: block;
  width: 688rpx;
  margin: 10rpx auto;
  padding: 20rpx; 
  border-radius: 16rpx;
  background-color: #ffffff;
}