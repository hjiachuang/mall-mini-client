/* pages/buy/buy.wxss */
page {
  background-color: var(--color-13);
  padding-bottom: 200rpx;
}

.buy {
  padding: 24rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.address, .product-item {
  border-radius: 16rpx;
  padding: 20rpx;
  background-color: #ffffff;
  display: flex;
}

.address-left {
  flex: 1;
}

.address-phone {
  margin-left: 20rpx;
}

.address-right {
  width: 50rpx;
  display: flex;
  align-items: center;
}

.address-right image {
  width: 40rpx;
  height: 40rpx;
}

.product-item {
  flex-direction: column;
  margin-bottom: 20rpx;
}

.product-item-top {
  display: flex;
}

.product-item-bottom {
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
}

.product-left {
  width: 152rpx;
  height: 152rpx;
}

.product-left image {
  width: 152rpx;
  height: 152rpx;
}

.product-center {
  margin: 0 20rpx;
  flex: 1;
  white-space: normal;
}

.product-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-skus {
  margin-top: 10rpx;
}

.product-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.product-right text:nth-child(1) {
  color: var(--color-6);
}

.product-right text:nth-child(2) {
  text-decoration: line-through;
  color: var(--color-12);
}

.amount-control {
  height: 64rpx;
  display: flex;
  align-items: center;
}

.amount-control image {
  width: 26rpx;
  height: 26rpx;
}

.amount-control image:first-child {
  margin-right: 20rpx;
}

.amount-control image:last-child {
  margin-left: 20rpx;
}

.amount-control text {
  display: inline-block;
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: var(--color-13);
}

.product-item-amount {
  line-height: 80rpx;
}

.miscellaneous, .summary {
  border-radius: 16rpx;
  padding: 20rpx;
  background-color: #ffffff;
}

.miscellaneous >view, .summary >view {
  height: 80rpx;
  line-height: 80rpx;
}

.distribution-mode {
  margin-left: 20rpx;
  color: var(--color-12);
}

.coupon image {
  vertical-align: middle;
  margin-left: 6rpx;
  width: 26rpx;
  height: 26rpx;
}

.remarks {
  display: flex;
}

.remarks-input {
  flex: 1;
  height: 100%;
  line-height: 80rpx;
  margin-left: 20rpx;
}

.remarks-input input {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  color: var(--color-8);
}

.remarks-input-placeholder {
  color: var(--color-12);
}

.buy-button {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
}

.buy .buy-button button {
  position: absolute;
  top: 20rpx;
  right: 24rpx;
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin: 0;
  padding: 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  background-color: var(--color-5);
}

.coupon-item {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  margin-bottom: 14rpx;
}

/* 当前页面的 checkbox 样式 */
.buy checkbox {
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  padding: 0;
}

.buy checkbox .wx-checkbox-input{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid var(--color-4);
  box-sizing: border-box;
}

.buy checkbox .wx-checkbox-input.wx-checkbox-input-checked{
}

.buy checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  font-size: 0;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: var(--color-4);
}